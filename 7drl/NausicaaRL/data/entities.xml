        </animation>
        <animation>
          <name>OPEN</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>False</random>
          <repeat>False</repeat>
          <nextAnimation>OPEN</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>1</x>
            <y>2</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
  </doors>
  
  
  
  <!-- *********************
       ******* CROPS *******
       ********************* -->
  <crops superclass="objects">
    <default>
      <pickup>False</pickup>
    </default>
    
    <entity>
      <name>cereal</name>
      <description>Some cereal is planted here.</description>
      <growth>[500, 500, 500]</growth>
      <harvest>[False, False, True]</harvest>
      <care>100</care>
      <careLossInterval>25</careLossInterval>
      <display>
        <default>SEEDS</default>
        <animation>
          <name>SEEDS</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>False</random>
          <repeat>False</repeat>
          <nextAnimation>MIDWAY</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>2</x>
            <y>1</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
        <animation>
          <name>MIDWAY</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>False</random>
          <repeat>False</repeat>
          <nextAnimation>GROWN</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>3</x>
            <y>1</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
        <animation>
          <name>GROWN</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>False</random>
          <repeat>False</repeat>
          <nextAnimation>GROWN</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>4</x>
            <y>1</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
  </crops>
  
  

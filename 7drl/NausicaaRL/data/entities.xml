      <pickup>False</pickup>
      <passable>False</passable>
      <isOpen>False</isOpen>
      <openable>True</openable>
    </default>
    
    <entity>
      <name>fence gate</name>
      <description>This is a fence gate.</description>
      <display>
        <default>CLOSED</default>
        <animation>
          <name>CLOSED</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>False</random>
          <repeat>False</repeat>
          <nextAnimation>CLOSED</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>0</x>
            <y>2</y>
            <w>1</w>
            <h>1</h>

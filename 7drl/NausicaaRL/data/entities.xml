  <!-- ********************
       **** CONTAINERS ****
       ******************** -->
  <containers superclass="objects">
    <default>
      <pickup>False</pickup>
      <passable>False</passable>
      <isOpen>False</isOpen>
      <openable>True</openable>
    </default>
    
    <entity>
      <name>chest</name>
      <description>A well-crafted chest.</description>
      <display>
        <default>CLOSED</default>
        <animation>
          <name>CLOSED</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>False</random>
          <repeat>False</repeat>
          <nextAnimation>CLOSED</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>5</x>
            <y>0</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
        <animation>
          <name>OPEN</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>False</random>
          <repeat>False</repeat>
          <nextAnimation>OPEN</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>6</x>
            <y>1</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
  </containers>
  
  
  <!-- *********************
       ******* DOORS *******
       ********************* -->

<nausicaaRL>
  
  
  <!-- *******************
       ****** TILES ******
       ******************* -->
  <tiles>
    <default>
      <passable>True</passable>
      <openable>False</openable>
      <w>1</w>
      <h>1</h>
    </default>
    <entity>
      <name>dirt road</name>
      <description>This is a dirt road, with the occasional pebble.</description>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>0</x>
            <y>0</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>grass</name>
      <description>Grass covers this part of the land.</description>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>1</x>
            <y>0</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>wall</name>
      <description>There is a wall here.</description>
      <passable>False</passable>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>2</x>
            <y>0</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
  </tiles>
  
  <!-- *******************
       ****** PARTS ******
       ******************* -->
  
  <parts>
    <entity>
      <name>left arm</name>
      <hp>10</hp>
    </entity>
    <entity>
      <name>right arm</name>
      <hp>10</hp>
    </entity>
    <entity>
      <name>torso</name>
      <hp>10</hp>
    </entity>
    <entity>
      <name>legs</name>
      <hp>10</hp>
    </entity>
    <entity>
      <name>head</name>
      <hp>10</hp>
    </entity>
  </parts>
  
  
  
  
  
  
  
  
  
  
  <!-- *******************
       ***** OBJECTS *****
       ******************* -->
  <objects>
    <default>
      <pickup>True</pickup>
      <passable>True</passable>
      <openable>False</openable>
      <equipAt>[]</equipAt>
      <protection>0</protection>
      <damageMin>0</damageMin>
      <damageMax>0</damageMax>
      <attackSpeed>0</attackSpeed>
      <w>1</w>
      <h>1</h>
    </default>
    
    <entity>
      <name>rock</name>
      <description>This is a heavy rock.</description>
      <pickup>False</pickup>
      <passable>False</passable>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>3</x>
            <y>0</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>pebble</name>
      <description>This is a little pebble.</description>
      <equipAt>[left arm, right arm]</equipAt>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>7</x>
            <y>0</y>
            <w>1</w>
            <h>1</h>
          </frame>
          <frame>
            <duration>-1</duration>
            <x>7</x>  
            <y>1</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>leggings</name>
      <description>A pair of leggings, protecting up to the knee.</description>
      <equipAt>[legs]</equipAt>
      <protection>2</protection>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>2</x>
            <y>2</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>flight cap</name>
      <description>A flight cap, with goggles and ear protection.</description>
      <equipAt>[head]</equipAt>
      <protection>1</protection>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>5</x>
            <y>2</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>ceramic sword</name>
      <description>A strong ceramic sword.</description>
      <equipAt>[left arm, right arm]</equipAt>
      <damageMin>2</damageMin>
      <damageMax>5</damageMax>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>3</x>
            <y>2</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>ceramic mace</name>
      <description>A strong ceramic mace.</description>
      <equipAt>[left arm, right arm]</equipAt>
      <damageMin>1</damageMin>
      <damageMax>3</damageMax>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>4</x>
            <y>2</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    
    
    <entity>
    <name>fence</name>
      <description>This is a wooden fence.</description>
      <pickup>False</pickup>
      <passable>False</passable>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>False</repeat>
          <nextAnimation>STILL</nextAnimation>
          <frame>
            <duration>-1</duration>
            <x>5</x>
            <y>1</y>
            <w>1</w>
            <h>1</h>
          </frame>
          <frame>
            <duration>-1</duration>
            <x>6</x>
            <y>1</y>
            <w>1</w>
            <h>1</h>
          </frame>
        </animation>
      </display>
    </entity>
    
    <entity>
      <name>windmill</name>
      <description>This a valley windmill.</description>
      <pickup>False</pickup>
      <passable>False</passable>
      <w>2</w>
      <h>2</h>
      <display>
        <default>STILL</default>
        <animation>
          <name>STILL</name>
          <spritesheet>data/spritesheet.png</spritesheet>
          <random>True</random>
          <repeat>True</repeat>
          <nextAnimation>STILL</nextAnimation>
          <dx>-1</dx>
          <dy>-2</dy>
          <frame>
            <duration>400</duration>
            <x>8</x>
            <y>1</y>
            <w>4</w>
            <h>4</h>
          </frame>
          <frame>
            <duration>400</duration>
            <x>12</x>
            <y>1</y>
            <w>4</w>
            <h>4</h>
          </frame><frame>
            <duration>400</duration>
            <x>16</x>
            <y>1</y>
            <w>4</w>
            <h>4</h>
          </frame><frame>
            <duration>400</duration>
            <x>20</x>
            <y>1</y>
            <w>4</w>
            <h>4</h>
          </frame><frame>
            <duration>400</duration>
            <x>24</x>
            <y>1</y>
            <w>4</w>
            <h>4</h>
          </frame>
          <frame>
            <duration>400</duration>
            <x>28</x>
            <y>1</y>
            <w>4</w>
            <h>4</h>
          </frame>
        </animation>
      </display>
    </entity>
